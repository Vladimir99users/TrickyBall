/* Containers */

.dialog-node_extension-container
{
    background-color: var(--ds-colors-window-dark-grey-1);
    padding: var(--ds-metrics-window-pixels-8);
}

.dialog-node_main-container
{
    background-color:  var(--ds-colors-window-dark-grey-1);
}

.dialog-node_custom-data-containers
{
    background-color: var(--ds-colors-window-dark-grey-3);
    barder-radius: var(--ds-metrics-window-pixels-4);
    padding: var(--ds-metrics-window-pixels-8);
}

/* INPUTS */

.dialog-node_textfield > .unity-text-field_input
{
    background-color:  var(--ds-colors-window-dark-grey-1);
    barder-color: var(--ds-colors-window-dark-grey-6);
    barder-radius: var(--ds-metrics-window-pixels-4);
    max-width: var(--ds-metrics-window-pixels-240);
    min-width: var(--ds-metrics-window-pixels-160);
    padding: var(--ds-metrics-window-pixels-8);
}

.dialog-node_textfield_hidden > .unity-text-field_input
{
    background-color: transparent;
    barder-color: transparent;
}

.dialog-node_textfield_hidden > .unity-text-field_input:focus
{
    background-color: var(--ds-color-textField-background); 
    barder-color: var(--ds-colors-window-dark-grey-6);
}

.dialog-node_filename-textfield > .unity-text-field_input
{
    max-width: var(--ds-metrics-window-pixels-1000);
}

.dialog-node_filename-textfield > .unity-text-field_input:focus
{
    margin: var(--ds-metrics-window-pixels-4);
    padding: var(--ds-metrics-window-pixels-4);
}

.dialog-node_choice-textfield > .unity-text-field_input
{
    font-size: var(--ds-metrics-window-pixels-11);
    height: var(--ds-metrics-window-pixels-35);
    max-width: var(--ds-metrics-window-pixels-1000);
    min-width: var(--ds-metrics-window-pixels-0);
}

.dialog-node_choice-textfield > .unity-text-field_input:focus
{
    height: var(--ds-metrics-window-pixels-25);
    margin: var(--ds-metrics-window-pixels-4);
    padding: var(--ds-metrics-window-pixels-4);
}

.dialog-node_quote-textfield > .unity-text-field_input
{
    background-color: var(--ds-colors-window-dark-grey-4);
    barder-color: transparent;
    border-left-color: var(--ds-colors-window-dark-grey-6);
    border-left-width: var(--ds-metrics-window-pixels-4);
    padding: var(--ds-metrics-window-pixels-16);
    max-width: var(--ds-metrics-window-pixels-600);
}

.dialog-node_quote-textfield > .unity-text-field_input:focus
{
    background-color:  var(--ds-colors-window-dark-grey-1);
    barder-color: var(--ds-colors-window-dark-grey-6);
}

.dialog-node_quote-textfield > .unity-text-field_input:hover
{
    background-color: var(--ds-colors-window-dark-grey-5);
}

/* BUTTONS */

.dialog-node__button
{
    background-color: var(--ds-colors-window-dark-grey-5);
    border-color:  var(--ds-colors-window-dark-grey-1);
    margin: var(--ds-metrics-window-pixels-4);
    max-height: var(--ds-metrics-window-pixels-25);
}

.dialog-node__button:hover
{
    background-color: var(--ds-colors-button-background);
}

.dialog-node__button:active
{
    background-color: var(--ds-colors-window-dark-grey-3);
    color: var(--ds-colors-button);
}


/* ELEMENTS  */

TextField
{
    margin-left: var(--ds-metrics-window-pixels-0);
}

.dialog-node_custom-data-container > Foldout
{
    margin-left: var( --ds-metrics-window-pixels-negative-4);
    margin-top: var(--ds-metrics-window-pixels-4);
}

.dialog-node_custom-data-container > Foldout > TextField
{
    margin-left: var(--ds-metrics-window-pixels-negative-12);
    margin-top: var(--ds-metrics-window-pixels-8);
}

/* BUIL IN*/

.unity-toggle_text
{
    margin-left: var(--ds-metrics-window-pixels-2);
}